<RootApp>:
    random_label: random_label
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Random\nNumber\nGenerator'
            font_size: 64
            color: 0.92, 0.45, 0, 1
        Label:
            id: random_label
            text: '-'
            font_size: 64
        Button:
            text: 'Generate'
            font_size: 32
            on_press: root.generate_number()
        Button:
            text: 'Clear'
            font_size: 32
            on_press: root.clear_number()
